<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentChatListId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.ChatListFragment">

    <TextView
        android:id="@+id/chats"
        android:layout_width="111dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="211dp"
        android:alpha="0.9"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0sp"
        android:paddingTop="0dp"
        android:text="@string/chats"
        android:textAppearance="@style/chats"
        app:layout_constraintEnd_toStartOf="@+id/nav_icons_s"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/nav_icons_s"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="36dp"
        android:alpha="0.9"
        android:background="@drawable/chat_ui_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/list"
        android:layout_width="342dp"
        android:layout_height="743dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:background="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chat_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/layout_chat_list_element" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
