<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:andriod="http://schemas.android.com/apk/res-auto"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/constraintLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="Fragments.SearchFragment">


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewid"
            android:layout_width="388dp"
            android:layout_height="641dp"
            andriod:layout_constraintBottom_toBottomOf="parent" andriod:layout_constraintTop_toTopOf="parent"
            andriod:layout_constraintStart_toStartOf="parent" andriod:layout_constraintEnd_toEndOf="parent"
            andriod:layout_constraintHorizontal_bias="0.304" andriod:layout_constraintVertical_bias="0.822"/>
    <androidx.appcompat.widget.Toolbar android:layout_width="404dp"
                                       android:layout_height="45dp"
                                       android:background="@color/colorPrimary"
                                       andriod:layout_constraintBottom_toBottomOf="parent"
                                       andriod:layout_constraintTop_toTopOf="parent"
                                       andriod:layout_constraintEnd_toEndOf="parent"
                                       andriod:layout_constraintStart_toStartOf="parent"
                                       andriod:layout_constraintHorizontal_bias="0.533"
                                       andriod:layout_constraintVertical_bias="0.005" android:id="@+id/toolbar">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                   android:id="@+id/iconforimage" android:src="@drawable/search"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/searchView"
                  android:hint="Search for users or projects.."/>


    </androidx.appcompat.widget.Toolbar>


</androidx.constraintlayout.widget.ConstraintLayout>
