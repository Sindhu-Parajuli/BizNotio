<LinearLayout
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="Fragments.ProfileFragment"
             android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="250dp"
    android:background="#40D2FF">

        <ImageView android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/profile" app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginBottom="572dp"
                   tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="60dp" app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginEnd="170dp" app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="141dp" app:layout_constraintHorizontal_bias="0.569"
                   app:layout_constraintVertical_bias="1.0"/>


        <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="18dp"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="50dp"
        />

        <FrameLayout    xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        tools:ignore="MergeRootFrame" />

    </RelativeLayout>
    <Button android:id="@+id/editbutton"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:text="Edit profile"
            android:textSize="15dp"
            android:textAllCaps="true"
    ></Button>


</LinearLayout>
