<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingActivity">


    <ImageView android:layout_width="373dp"
               android:layout_height="114dp"
               android:src="@drawable/profile"
               android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="44dp" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="4dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="4dp" android:layout_marginBottom="22dp"
               app:layout_constraintBottom_toTopOf="@+id/username"
               app:layout_constraintHorizontal_bias="0.6"/>


    <EditText
            android:inputType="text"
            android:layout_width="377dp"
            android:layout_height="49dp" android:id="@+id/EnterProfession"
            android:hint="Enter Profession"
            android:layout_marginEnd="310dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="31dp" android:layout_marginBottom="465dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintVertical_bias="0.472" android:textColor="#0C0C0C" android:textSize="18sp"/>
    <EditText
            android:inputType="text"
            android:layout_width="377dp"
            android:layout_height="49dp" android:id="@+id/EnterEducation"
            android:hint="Enter Education"
            android:layout_marginEnd="310dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/EnterProfession" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="31dp" android:layout_marginBottom="465dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintVertical_bias="0.494" android:textColor="#0C0C0C" android:textSize="18sp"/>
    <EditText
            android:inputType="text"
            android:layout_width="377dp"
            android:layout_height="49dp" android:id="@+id/EnterInterest"
            android:hint="Enter Interest"
            android:layout_marginEnd="310dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="146dp"
            app:layout_constraintTop_toBottomOf="@+id/EnterEducation" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="31dp" android:layout_marginBottom="465dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintVertical_bias="0.417" android:textColor="#0C0C0C" android:textSize="18sp"/>
    <EditText
            android:inputType="text"
            android:layout_width="377dp"
            android:layout_height="49dp" android:id="@+id/EnterBizNotioGoals"
            android:hint="Enter Goals"
            android:layout_marginEnd="310dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/EnterInterest" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="31dp" android:layout_marginBottom="465dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintVertical_bias="0.361" android:textColor="#0C0C0C" android:textSize="18sp"/>
    <Button
            android:id="@+id/logout"
            android:layout_width="133dp"
            android:layout_height="42dp"
            android:text="Logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.7"
            android:layout_marginBottom="108dp"/>
    <Button
            android:text="Delete Account"
            android:layout_width="174dp"
            android:layout_height="43dp"
            android:id="@+id/deletebutton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="17dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="128dp" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/logout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="133dp" app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Change Profile Picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ChangePicture"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="139dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="130dp" android:layout_marginBottom="306dp"
            app:layout_constraintBottom_toTopOf="@+id/logout"/>
    <Button
            android:text="save"
            android:layout_width="98dp"
            android:layout_height="36dp" android:id="@+id/button"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/EnterBizNotioGoals" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="314dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="18dp" android:layout_marginBottom="190dp"
            app:layout_constraintBottom_toBottomOf="parent" android:shadowColor="@color/colorPrimaryDark"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>