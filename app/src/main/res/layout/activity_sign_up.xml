<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUp">


    <ImageView
            android:id="@+id/SignLogo"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:src="@drawable/icon"

            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="80dp"
            tools:layout_editor_absoluteX="30dp"/>

    <EditText
            android:id="@+id/SignUpName"
            android:layout_width="312dp"

            android:layout_marginTop="240dp"
            android:hint="First and Last Name......"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:background="@color/cardview_light_background"

            tools:ignore="MissingConstraints"

            tools:layout_editor_absoluteY="307dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/SignUpEmail"
            android:layout_width="312dp"
            android:layout_height="240dp"
            android:hint="Email......"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:background="@color/cardview_light_background"

            tools:ignore="MissingConstraints"

            tools:layout_editor_absoluteY="389dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            android:layout_below="@id/SignUpName"/>


    <EditText
            android:id="@+id/SignUpPassword"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:hint="Password......"
            android:ems="10"
            android:inputType="textPassword"
            android:background="@color/cardview_light_background"

            tools:ignore="MissingConstraints,TextFields"

            tools:layout_editor_absoluteY="462dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:layout_below="@id/SignUpName"
            tools:layout_below="@id/SignUpName"/>

    <Button
            android:id="@+id/register"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:background="@color/cardview_light_background"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="559dp"
            android:text="Register"
            android:textSize="15dp"
            android:textAllCaps="true"
            tools:layout_editor_absoluteX="110dp" android:layout_below="@id/SignUpEmail"/>
    <Button
            android:id="@+id/signUpIn"
            android:layout_width="228dp"
            android:layout_height="48dp"
            android:background="@color/cardview_light_background"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="641dp"
            android:text="Returning User? - Sign In"
            android:textSize="15dp"
            android:textAllCaps="true"
            tools:layout_editor_absoluteX="91dp"/>








</RelativeLayout>