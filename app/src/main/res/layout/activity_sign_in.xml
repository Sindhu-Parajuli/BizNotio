<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        tools:context=".SignInActivity">


    <ImageView
            android:id="@+id/logo"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:src="@drawable/icon"

    />
    <EditText
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:ems="10"
            android:background="@color/cardview_light_background"
            android:layout_marginTop="240dp"
            android:layout_marginBottom="46dp"
    />
    <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password......"
            android:ems="10"
            android:inputType="textPassword"

            android:background="@color/cardview_light_background"

            android:layout_below="@id/email"/>


    <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="480dp"
            android:text="LogIn"
            android:textSize="15dp"
            android:textAllCaps="true"
            tools:layout_editor_absoluteX="110dp" android:layout_below="@id/Password"/>

    <Button
            android:id="@+id/sign"
            android:layout_width="228dp"
            android:layout_height="56dp"
            android:background="@color/cardview_light_background"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="641dp"
            android:text="New User? - Sign Up"
            android:textSize="15dp"
            android:textAllCaps="true"
            tools:layout_editor_absoluteX="91dp" android:layout_below="@id/login"/>








</RelativeLayout>